<configuration>
  <system.webServer>
    <handlers>
      <!-- 
        Indica que los archivos server.js deben ser manejados por el módulo iisnode.
        El path es relativo a la ubicación de este web.config.
      -->
      <add name="iisnode" path="backend/server.js" verb="*" modules="iisnode" />
    </handlers>

    <rewrite>
      <rules>
        <!-- 
          Regla 1: No hacer nada para las solicitudes al backend.
          Cualquier solicitud que vaya a backend/server.js es manejada por iisnode directamente.
        -->
        <rule name="NodeBackend" stopProcessing="true">
          <match url="^backend/server.js" />
          <action type="None" />
        </rule>

        <!-- 
          Regla 2: Redirigir las solicitudes de API al backend de Node.js.
          Toma las solicitudes a /api/* y las reescribe internamente a backend/server.js.
          El backend de Express recibirá la URL original /api/upload.
        -->
        <rule name="ApiRoutes">
          <match url="^api/.*" />
          <action type="Rewrite" url="backend/server.js" />
        </rule>

        <!-- 
          Regla 3: Servir archivos estáticos si existen.
          Si la URL corresponde a un archivo o directorio físico en la carpeta 'dist',
          IIS lo servirá directamente y no continuará procesando más reglas.
        -->
        <rule name="StaticFiles" stopProcessing="true">
          <match url="^dist/.*" />
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" />
          </conditions>
          <action type="None" />
        </rule>
        
        <!-- 
          Regla 4: Regla de fallback para Single Page Application (SPA).
          Si ninguna de las reglas anteriores coincidió, significa que es una ruta de navegación
          de React. Reescribe la solicitud a /index.html para que React Router la maneje.
          Es importante que tu `npm run build` genere un `index.html` en la raíz o ajustar la ruta.
          Vite lo genera en `dist/index.html`, así que apuntamos ahí.
        -->
        <rule name="ReactApp" stopProcessing="true">
          <match url=".*" />
          <conditions logicalGrouping="MatchAll">
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
          </conditions>
          <!-- Asumiendo que el punto de entrada de tu app construida es /dist/index.html -->
          <action type="Rewrite" url="/dist/index.html" />
        </rule>
      </rules>
    </rewrite>

    <!-- Activa el logging detallado de iisnode para depuración. Los logs se guardarán en la carpeta 'iisnode' -->
    <iisnode loggingEnabled="true" devErrorsEnabled="true" />

  </system.webServer>
</configuration>
